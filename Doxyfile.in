# Doxyfile.in - Doxygen configuration template

# Project settings
PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = "1.0"
OUTPUT_DIRECTORY       = "@DOXYGEN_OUTPUT_DIR@"
INPUT                 = @DOXYGEN_INPUT_DIR@
RECURSIVE             = YES
FILE_PATTERNS         = *.cpp *.h
CLASS_DECLARATION	  = YES
EXCLUDE				  = @DOXYGEN_EXCLUDE_DIR@

# Documentation generation options
GENERATE_HTML         = YES
GENERATE_LATEX        = NO
GENERATE_MAN          = NO
GENERATE_XML          = NO

# Source browsing options
SOURCE_BROWSER        = YES
INLINE_SOURCES        = NO
